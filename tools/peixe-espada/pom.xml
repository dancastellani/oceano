
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>ic.gems</groupId>
    <artifactId>PeixeEspadaCliente</artifactId>
    <packaging>jar</packaging>
    <version>1.0.3</version>
    <name>PeixeEspadaCliente</name>
    <url>https://sel.ic.uff.br/redmine/projects/peixeespadacliente</url>
    <description>see https://sel.ic.uff.br/redmine/projects/peixeespadacliente/wiki</description>
    <scm>
        <connection>scm:svn:https://sel.ic.uff.br/gems/svn/oceano/peixeespadacliente/trunk</connection>
        <developerConnection>scm:svn:https://sel.ic.uff.br/gems/svn/oceano/peixeespadacliente/trunk</developerConnection>
        <url>https://sel.ic.uff.br/gems/svn/oceano/peixeespadacliente/trunk</url>
    </scm>  
    <parent>
        <groupId>br.uff.ic.gems</groupId>
        <artifactId>tools-parent</artifactId>
        <version>3.0.0-SNAPSHOT</version>
    </parent>    
    <properties>
        <maven.test.skip>false</maven.test.skip>        
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
        <descriptionOneLine>Módulo Cliente do Peixe Espada</descriptionOneLine>
        <url>${project.url}</url>
        <description>${project.description}</description>
        <vendor>Heliomar Kann da Rocha Santos</vendor>
        <finalName>${project.artifactId}-${project.version}</finalName>
    </properties>

    <profiles>

        <profile>
            <id>Desenvolvimento</id>			
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <urlProject>http://localhost:8080</urlProject>
                <contexto>oceano</contexto>
                <pathJnlp>upload/jnlp/peixeespada</pathJnlp>
                <finalUrlJnlp>${urlProject}/${contexto}/${pathJnlp}/</finalUrlJnlp>
            </properties>
        </profile>

        <profile>
            <id>Producao</id>
            <properties>
                <urlProject>https://gems.ic.uff.br</urlProject>
                <contexto>oceano</contexto>
                <pathJnlp>upload/jnlp/peixeespada</pathJnlp>
                <finalUrlJnlp>${urlProject}/${contexto}/${pathJnlp}/</finalUrlJnlp>
            </properties>
        </profile>

        <profile>
            <id>Teste</id>
            <properties>
                <urlProject>${project.build.directory}/jnlp/</urlProject>
                <finalUrlJnlp>${urlProject}</finalUrlJnlp>
            </properties>
        </profile>

    </profiles>

    <build>
        <resources>
        <!--FUNCIONA APENAS PARA O CODIGO FONTE, PARA WEB TEM QUE USAR O PLUGIN-->
            <resource>
                <directory>src/main/resources/</directory>
                <includes>
                    <include>**/img/*.*</include>
                </includes>
                <filtering>false</filtering>
            </resource>
            <resource>
                <directory>src/main/resources/</directory>
                <includes>
                    <include>**/*.*</include>
                </includes>
                <excludes>
                    <exclude>**/img/*.*</exclude>
                </excludes>
                <filtering>true</filtering>
            </resource>

        </resources>

        <plugins>

            <plugin>
                <groupId>org.codehaus.mojo.webstart</groupId>
                <artifactId>webstart-maven-plugin</artifactId>
                <version>1.0-beta-1</version>           

                <configuration>

                    <outputDirectoryName>${project.build.directory}\jnlp\</outputDirectoryName>
                    <excludeTransitive>false</excludeTransitive>

                    <jnlpFiles>
                        <jnlpFile>
                            <!--<templateFilename>/template/template.vm</templateFilename>-->
                            <jarResources>
                                <jarResource>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>${project.artifactId}</artifactId>
                                    <version>${project.version}</version>
                                    <mainClass>br.uff.ic.gems.peixeespadacliente.gui.Main</mainClass>
                                </jarResource>
                            </jarResources>
                        </jnlpFile>
                    </jnlpFiles>

                    <jnlp>
                        <inputTemplateResourcePath>${project.basedir}</inputTemplateResourcePath>
                        <inputTemplate>template/template.vm</inputTemplate>
                        <mainClass>br.uff.ic.gems.peixeespadacliente.gui.Main</mainClass>
                        <outputFile>espadaCliente.jnlp</outputFile>
                    </jnlp>

                    <sign>
                        <keystore>${project.build.directory}\jnlp\keystore</keystore>
                        <keypass>ultraSecreto</keypass>
                        <storepass>123456</storepass>
                        <alias>PeixeEspada</alias>
                        <validity>3650</validity>

                        <dnameCn>Heliomar Kann da Rocha Santos</dnameCn>
                        <dnameOu>Institudo de Computação</dnameOu>
                        <dnameO>Universidade Federal Fluminence</dnameO>
                        <dnameL>Niterói</dnameL>
                        <dnameSt>Rio de Janeiro</dnameSt>
                        <dnameC>BR</dnameC>
                        <verify>false</verify>

                        <keystoreConfig>
                            <delete>true</delete>
                            <gen>true</gen>
                        </keystoreConfig>

                    </sign>

                    <outputJarVersions>false</outputJarVersions>

                    <verbose>true</verbose>
                    <unsign>true</unsign>
                    <verifyjar>false</verifyjar>

                    <keystoreConfig>
                        <delete>true</delete>
                        <gen>true</gen>
                    </keystoreConfig>

                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.4.3</version>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.3.1</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>br.uff.ic.gems.peixeespadacliente.gui.Main</mainClass>
                            <packageName>br.uff.ic.gems.peixeespadacliente</packageName>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                            <addClasspath>true</addClasspath>
                            <addExtensions/>
                            <classpathPrefix/>
                        </manifest>
                        <manifestEntries>
                            <mode>development</mode>
                            <url>${project.url}</url>
                        </manifestEntries>
                        <manifestFile>src/main/resources/META-INF/MANIFEST.MF</manifestFile>
                    </archive>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.4.2</version>
                <configuration>
                    <suiteXmlFiles>
                        <suiteXmlFile>src/test/resources/testng.xml</suiteXmlFile>
                    </suiteXmlFiles>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <id>delete-keystore</id>
                        <phase>install</phase>
                        <configuration>
                            <tasks>
<!--                                    <delete file="${project.build.directory}/classes/seam.properties" />-->
<!--                                <delete file="target/jnlp/keystore" />-->
                                <delete dir="target/jnlpa/" />
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>sign-dll</id>
                        <phase>install</phase>
                        <configuration>
                            <tasks>
                                <delete file="XXXXXXXXXXXXXX" />
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>aspectj-maven-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <id>compile</id>
                        <configuration>
                            <source>${maven.compiler.source}</source>
                            <target>${maven.compiler.target}</target>
                            <verbose>true</verbose>
                            <outxml>true</outxml>
                            <privateScope>true</privateScope>
                            <complianceLevel>${maven.compiler.source}</complianceLevel>
                        </configuration>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
